
@model Ipam.Dto.IpAddressDto

@{    ViewData["Title"] = "Delete IP Address";
    var addressSpaceId = ViewBag.AddressSpaceId;
}

<h1>Delete IP Address</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>IP Address</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prefix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prefix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentId)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-addressSpaceId="@addressSpaceId" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-addressSpaceId="@addressSpaceId">Back to List</a>
    </form>
</div>
