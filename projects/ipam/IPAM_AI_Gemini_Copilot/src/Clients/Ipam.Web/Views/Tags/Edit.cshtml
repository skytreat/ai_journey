
@model Ipam.Dto.TagDto

@{    ViewData["Title"] = "Edit Tag";
    var addressSpaceId = ViewBag.AddressSpaceId;
}

<h1>Edit Tag</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-addressSpaceId="@addressSpaceId" asp-route-name="@Model.Name">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<Ipam.Dto.TagType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KnownValues" class="control-label"></label>
                <input asp-for="KnownValues" class="form-control" />
                <span asp-validation-for="KnownValues" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attributes" class="control-label"></label>
                <input asp-for="Attributes" class="form-control" />
                <span asp-validation-for="Attributes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-addressSpaceId="@addressSpaceId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
